@{ var valueSearch = Request.Params["search"];}

<style>
    .field-icon {
        float: right;
        margin-left: -25px;
        position: relative;
        background: none;
        border: none;
        z-index: 2;
    }
</style>

@using (Html.BeginForm("index", "products", FormMethod.Get, htmlAttributes: new { id = "formSearch", @class = "form-inline d-flex flex-row" }))
{
    @Html.TextBox("search", null, htmlAttributes: new
    {
        @class = "form-control shadow-sm",
    page = Request.Params["page"],
    sortOrder = Request.Params["sortOrder"],
    category = Request.Params["category"],
    brand = Request.Params["brand"],
    search = Request.Params["search"],
    placeholder = "Nhập tên sản phẩm..."
    })
    <button type="button" class="field-icon" onclick="clearSearch()"><i class="fas fa-times"></i></button>
    <input class="btn btn-search my-2 my-sm-0" value="Tìm kiếm" type="submit" />
}

<script>
    function clearSearch() {
        document.getElementById('search').value = '';
    }
</script>