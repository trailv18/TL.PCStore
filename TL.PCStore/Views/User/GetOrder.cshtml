@model IEnumerable<TL.PCStore.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-md-4 col-lg-3">
            <div class="card">

                <div class="list-group list-group-flush">
                    <div class="card-body text-center">
                        <img src="~/Images/user.png" width="100" height="100" alt="User" class="rounded-circle mb-3">
                        <h5 class="bold mb-0">@ViewBag.UserName</h5>

                    </div>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" href="@Url.Action("getUserInformation","user")"><i data-feather="user" class="mr-3"></i>Tài khoản</a>
                        <a class="list-group-item list-group-item-action active" href="@Url.Action("getOrder","user")"><i data-feather="shopping-bag" class="mr-3"></i> Đơn hàng</a>
                        <a class="list-group-item list-group-item-action text-danger"><i data-feather="log-out" class="mr-3"></i> Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col mt-3 mt-md-0">

            <div class="card">
                <div class="card-body">
                    <h5 class="text-center">ĐƠN HÀNG</h5><hr>

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="processing-tab" data-bs-toggle="tab" data-bs-target="#processing" type="button" role="tab" aria-controls="processing" aria-selected="true">Đang xử lý</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="delivary-tab" data-bs-toggle="tab" data-bs-target="#delivary" type="button" role="tab" aria-controls="delivary" aria-selected="false">Đang vận chuyển</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="success-tab" data-bs-toggle="tab" data-bs-target="#success" type="button" role="tab" aria-controls="success" aria-selected="false">Đã nhận</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="cancel-tab" data-bs-toggle="tab" data-bs-target="#cancel" type="button" role="tab" aria-controls="cancel" aria-selected="false">Đã hủy</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="processing" role="tabpanel" aria-labelledby="processing-tab">
                            @Html.Action("OrderProcessing")
                        </div>
                        <div class="tab-pane fade" id="delivary" role="tabpanel" aria-labelledby="delivary-tab">
                            @Html.Action("OrderDelivary")
                        </div>
                        <div class="tab-pane fade" id="success" role="tabpanel" aria-labelledby="success-tab">
                            @Html.Action("OrderSuccess")
                        </div>
                        <div class="tab-pane fade" id="cancel" role="tabpanel" aria-labelledby="cancel-tab">
                            @Html.Action("OrderCancel")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>


