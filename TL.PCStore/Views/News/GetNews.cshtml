@model TL.PCStore.Models.News

@{
    ViewBag.Title = "GetNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-5">
    <div class="col-md-8 mx-auto">
        <div class="">
            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                <div class="media-body order-2 order-lg-1">
                    <h2 class="mt-0 font-weight-bold text-uppercase mb-2">@Model.Title</h2>
                    <p class="font-italic text-muted mb-0 small py-3">
                        Đăng bởi @Model.User.FullName |
                        Đăng ngày @Model.PostedOn|
                        @if (Model.ViewCount == 0 || Model.ViewCount == null)
                        {
                            <label>(chưa có lượt xem)</label>
                        }
                        else
                        {
                            <label>@Model.ViewCount (lượt xem)</label>

                        }

                    </p>
                    <p style="font-size: 20px" class="py-3">@Model.ShortDescription</p>

                    @Html.Raw(Model.PostContent)
                    <hr />
                    <div class="py-5">
                        @*comment*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mx-auto shadow">

        @Html.Action("GetProductBestSale")
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
